package Libraries.Game.Graphics.Shaders

use Libraries.Game.GameStateManager
use Libraries.Game.Graphics.GraphicsManager
use Libraries.Game.Graphics.Shaders.OpenGL.Vertex.BorderedFontVertexShaderOpenGL
use Libraries.Game.Graphics.Shaders.OpenGL.Fragment.BorderedFontFragmentShaderOpenGL
use Libraries.Game.Graphics.Shaders.OpenGL.Mapping.BorderedFontShaderMappingOpenGL

class BorderedFontShaderProgram is ShaderProgram

    constant text PROGRAM_NAME = "Bordered Font Program"

    on create
        SetName(PROGRAM_NAME)

        BorderedFontVertexShaderOpenGL vertex
        BorderedFontFragmentShaderOpenGL fragment

        Add(vertex)
        Add(fragment)

        BorderedFontShaderMappingOpenGL mapping
        SetShaderMapping(mapping)
    end

end