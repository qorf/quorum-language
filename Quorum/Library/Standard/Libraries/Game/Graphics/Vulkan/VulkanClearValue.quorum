package Libraries.Game.Graphics.Vulkan

class VulkanClearValue

    number red = -1
    number green = -1
    number blue = -1
    number alpha = -1

    number depth = -1
    
    integer stencil = -1

    // Indicates if the Vulkan layer needs to update its values to match this.
    boolean isDirty = true

    action SetColor(number red, number green, number blue)
        SetColor(red, green, blue, 1.0)
    end

    action SetColor(number red, number green, number blue, number alpha)
        me:red = red
        me:green = green
        me:blue = blue
        me:alpha = alpha

        isDirty = true
    end

    action GetRed returns number
        return red
    end

    action SetRed(number red)
        me:red = red

        isDirty = true
    end

    action GetGreen returns number
        return green
    end

    action SetGreen(number green)
        me:green = green

        isDirty = true
    end

    action GetBlue returns number
        return blue
    end

    action SetBlue(number blue)
        me:blue = blue

        isDirty = true
    end

    action GetAlpha returns number
        return alpha
    end

    action SetAlpha(number alpha)
        me:alpha = alpha

        isDirty = true
    end

    action GetDepth returns number
        return depth
    end

    action SetDepth(number depth)
        me:depth = depth

        isDirty = true
    end

    action GetStencil returns integer
        return stencil
    end

    action SetStencil(integer stencil)
        me:stencil = stencil

        isDirty = true
    end

    action IsDirty returns boolean
        return isDirty
    end

    action ResetDirtyFlag
        SetNativeValues()
        isDirty = false
    end

    private system action SetNativeValues

    action Dispose
        red = -1
        green = -1
        blue = -1
        alpha = -1
        depth = -1
        stencil = -1
        isDirty = true

        DisposeNative()
    end

    private system action DisposeNative

end