package Libraries.Game.Graphics.Vulkan

class VulkanDescriptorBufferInfo

    VulkanBuffer buffer = undefined
    integer offset = 0
    integer range = 0

    action GetBuffer returns VulkanBuffer
        return buffer
    end

    action SetBuffer(VulkanBuffer buffer)
        me:buffer = buffer
    end

    action GetOffset returns integer
        return offset
    end

    action SetOffset(integer offset)
        me:offset = offset
    end

    action GetRange returns integer
        return range
    end

    action SetRange(integer range)
        me:range = range
    end

end