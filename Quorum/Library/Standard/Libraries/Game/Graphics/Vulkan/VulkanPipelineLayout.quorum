package Libraries.Game.Graphics.Vulkan

use Libraries.Containers.Array

class VulkanPipelineLayout

    VulkanDevice device = undefined
    boolean initialized = false    

    action Create(VulkanDevice device, Array<VulkanDescriptorSetLayout> descriptorSetLayouts) returns boolean
        boolean success = CreateNative(device, descriptorSetLayouts)
        if success
            me:device = device
            initialized = true
        end

        return success
    end

    private system action CreateNative(VulkanDevice device, Array<VulkanDescriptorSetLayout> descriptorSetLayouts) returns boolean

end