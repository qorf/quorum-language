package Libraries.Game.Graphics.Vulkan.Commands

use Libraries.Game.Graphics.Vulkan.VulkanCommandBuffer
use Libraries.Game.Graphics.Vulkan.VulkanBuffer

class BindVertexBufferCommand is VulkanCommand

    VulkanBuffer buffer = undefined
    integer firstBinding = 0
    integer offset = 0

    /*
    This action records this command into the provided command buffer.
    The command buffer must already be open for recording using the
    buffer's "BeginRecording" action.
    */
    system action Record(VulkanCommandBuffer buffer)

    action GetBuffer returns VulkanBuffer
        return buffer
    end

    action SetBuffer(VulkanBuffer buffer)
        me:buffer = buffer
    end

    action GetFirstBinding returns integer
        return firstBinding
    end

    action SetFirstBinding(integer firstBinding)
        me:firstBinding = firstBinding
    end

    action GetOffset returns integer
        return offset
    end

    action SetOffset(integer offset)
        me:offset = offset
    end

end