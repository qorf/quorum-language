package Libraries.Game.Behaviors.GraphicUserInterfaces

use Libraries.Game.Behaviors.Behavior
use Libraries.Interface.Events.BehaviorEvent
use Libraries.Interface.Controls.TreeItem

class ToggleTreeViewBehavior is Behavior
    
    TreeItem treeItem = undefined

    action SetTreeItem(TreeItem item)
        treeItem = item
    end

    action GetTreeItem returns TreeItem
        return treeItem
    end

    action Run(BehaviorEvent event)
        if treeItem not= undefined
            treeItem:Open()
        end
    end

    action Dispose
        if treeItem not= undefined
            treeItem:Close()
        end
    end
end