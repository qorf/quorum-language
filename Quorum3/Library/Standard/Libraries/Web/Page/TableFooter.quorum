package Libraries.Web.Page

use Libraries.Web.Page.WebTag
use Libraries.Web.Page.Attributes

/*
The TableFooter class represents HTML's (Hypertext Markup Language) tfoot tag which is
used to footer content of a table. This will go after the TableBody.
You can find more information about this tag at: 
        <a href="http://www.w3schools.com/tags/tag_tfoot.asp">The tfoot attribute</a>.

Attribute: Example
use Libraries.Web.Page.all
class Main
   action main
      //make a web page
      WebPage page

      WebTable table
      TableCaption caption
      TableFooter tFoot

      caption:SetDescription("this is the caption")

      //add a TableRow to the header
      TableRow row
      tFoot:Add(row)

      table:Add(caption)
      table:Add(tFoot)

      page:AddToBody(table)
   end
end
*/
class TableFooter is WebTag
    action Generate returns text
        text result = "<tfoot " 
        Attributes attributes = parent:WebTag:GetAttributes()
        attributeText = attributes:Generate()
        result = result + attributeText + ">"
        result = result + me:GenerateNestedTags()
        result = result + "</tfoot>"
        return result
    end

    /*
    This action places a TableRow object inside of a TableFooter object.

    Attribute: Parameter content specifies what will be added to the page.

    Attribute: Example
    use Libraries.Web.Page.all

    class Main
        action Main
            WebPage page
            Body body = page:GetBody()

            TableRow tableRow
            body:Add(tableRow)

            text value = page:Generate()
            output value
        end
    end
    */
    action Add(TableRow content)
        parent:WebTag:tags:Add(content)
    end

    /*
    This action places a HiddenContent object inside of a TableFooter object.

    Attribute: Parameter content specifies what will be added to the page.

    Attribute: Example
    use Libraries.Web.Page.all

    class Main
        action Main
            WebPage page
            Body body = page:GetBody()

            HiddenContent hiddenContent
            body:Add(hiddenContent)

            text value = page:Generate()
            output value
        end
    end
    */
    action Add(HiddenContent content)
        parent:WebTag:tags:Add(content)
    end

    /*
    This action places a Script object inside of a TableFooter object.

    Attribute: Parameter content specifies what will be added to the page.

    Attribute: Example
    use Libraries.Web.Page.all

    class Main
        action Main
            WebPage page
            Body body = page:GetBody()

            Script script
            body:Add(script)

            text value = page:Generate()
            output value
        end
    end
    */
    action Add(Script content)
        parent:WebTag:tags:Add(content)
    end

end